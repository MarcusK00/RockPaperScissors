<Window
    x:Class="MyCalculatorApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyCalculatorApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="600"
    Height="400"
    Background="#FF310083"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>

        <Label
            x:Name="rockCountDownLabel"
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="ROCK"
            FontFamily="Bahnschrift Light"
            FontSize="30"
               Foreground="#FFFF00F0"
               Visibility="Hidden"
            />
        <Label
            x:Name="paperCountDownLabel"
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="PAPER"
            FontFamily="Bahnschrift Light"
            FontSize="30"
            Visibility="Hidden"
               Foreground="#FF00FFDA" />
        <Label
            x:Name="scissorsCountDownLabel"
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="SCISSORS"
            FontFamily="Bahnschrift Light"
            FontSize="30"
            Visibility="Hidden"
               Foreground="#FF003DFF" />
        <Label
            x:Name="shootCountDownLabel"
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="SHOOT!"
            FontFamily="Bahnschrift Light"
            FontSize="30"
            Visibility="Hidden"
               Foreground="White" />
        <TextBlock x:Name="txtBlockPlayer"
                   Grid.Row="2"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Text="Player"
                   FontFamily="Bahnschrift Light"
                   FontSize="23"
                   Foreground="White"
                   Visibility="Hidden"/>
        <TextBlock x:Name="txtBlockComputer"
                   Grid.Row="2"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Text="Computer"
                   FontFamily="Bahnschrift Light"
                   FontSize="23"
                   Foreground="White"
                   Visibility="Hidden"/>
        <TextBlock x:Name="txtBlockVS"
                   Grid.Row="2"
                   Grid.Column="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="VS"
                   FontFamily="Bahnschrift Light"
                   FontSize="23"
                   Foreground="White"
                   Visibility="Hidden"
                   />

        <TextBlock x:Name="rockPlayerWeapon"
                   Grid.Row="2"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="ROCK"
                   FontSize="23"
                   FontFamily="Cascadia Mono"
                   Foreground="#FFFF00F0"
                   Visibility="Hidden"/>
        <TextBlock x:Name="paperPlayerWeapon"
                   Grid.Row="2"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="PAPER"
                   FontSize="23"
                   FontFamily="Cascadia Mono"
                   Foreground="#FF00FFDA"
                   Visibility="Hidden" />
        <TextBlock x:Name="scissorsPlayerWeapon"
                   Grid.Row="2"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="SCISSORS"
                   FontSize="23"
                   FontFamily="Cascadia Mono"
                   Foreground="#FF003DFF"
                   Visibility="Hidden" />
        <TextBlock x:Name="rockComputerWeapon"
                   Grid.Row="2"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="ROCK"
                   FontSize="23"
                   FontFamily="Cascadia Mono"
                   Foreground="#FFFF00F0"
                   Visibility="Hidden" />
        <TextBlock x:Name="paperComputerWeapon"
                   Grid.Row="2"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="PAPER"
                   FontSize="23"
                   FontFamily="Cascadia Mono"
                   Foreground="#FF00FFDA"
                   Visibility="Hidden" />
        <TextBlock x:Name="scissorsComputerWeapon"
                   Grid.Row="2"
                   Grid.Column="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="SCISSORS"
                   FontSize="23"
                   FontFamily="Cascadia Mono"
                   Foreground="#FF003DFF"
                   Visibility="Hidden" />



        <Label
            Grid.Row="1"
            Grid.Column="2"
            Margin="30,0,30,0"
            Content="Wins:"
            FontFamily="Bahnschrift Light"
            FontSize="23"
            Foreground="White" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,0,30,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
               Content="{Binding ScoreSystem.CurrentScore}"
               FontFamily="Bahnschrift Light"
            FontSize="23"
            Foreground="White" />
        <Label
            x:Name="startBtn"
            Grid.Row="3"
            Grid.Column="2"
            Margin="30,40,30,5"
            Background="Transparent"
            BorderThickness="0"
            Content="Start"
            FontFamily="Cascadia Mono Light"
            FontSize="26"
            Foreground="White"
            IsEnabled="False"
            MouseDown="Button_Click"
            Opacity="0.5" />
        <Label
            x:Name="rockTextBlock"
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="ROCK"
            FontFamily="Cascadia Mono Light"
            FontSize="23"
            MouseDown="rockTextBlock_MouseDown"
            MouseEnter="rockTextBlock_MouseEnter"
            MouseLeave="rockTextBlock_MouseLeave"
            Opacity="0.7">
            <TextBlock.Foreground>
                <SolidColorBrush Opacity="1" Color="#FFFF00F0" />
            </TextBlock.Foreground>
        </Label>
        <Label
            x:Name="paperTextBlock"
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="center"
            VerticalAlignment="Center"
            Content="PAPER"
            FontFamily="Cascadia Mono Light"
            FontSize="23"
            MouseDown="paperTextBlock_MouseDown"
            MouseEnter="paperTextBlock_MouseEnter"
            MouseLeave="paperTextBlock_MouseLeave"
            Opacity="0.7">
            <TextBlock.Foreground>
                <SolidColorBrush Opacity="1" Color="#FF00FFDA" />
            </TextBlock.Foreground>
        </Label>
        <Label
            x:Name="scissorsTextBlock"
            Grid.Row="2"
            Grid.Column="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="SCISSORS"
            FontFamily="Cascadia Mono Light"
            FontSize="23"
            MouseDown="scissorsTextBlock_MouseDown"
            MouseEnter="scissorsTextBlock_MouseEnter"
            MouseLeave="scissorsTextBlock_MouseLeave"
            Opacity="0.7">
            <TextBlock.Foreground>
                <SolidColorBrush Opacity="1" Color="#FF003DFF" />
            </TextBlock.Foreground>
        </Label>


    </Grid>

</Window>
